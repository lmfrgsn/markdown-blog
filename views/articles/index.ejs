<%- include('./partials/header'); %>
<h1 class="mb-4">Blog Articles</h1>
<a href="/articles/new" class="btn btn-success">New Article</a>

<% articles.forEach(article=>{ %>
<div class="card mt-4">
  <div class="card-body">
    <h4 class="cart-title"><%= article.title %></h4>
    <div class="card-subtitle text-muted mb-2">
      <%= article.createdAt.toLocaleDateString() %>
    </div>
    <div class="card-tex mb-2"><%= article.description %></div>
    <a class="btn btn-primary" href="/articles/<%= article.slug %>"
      >Read More</a
    >
    <a class="btn btn-info" href="/articles/edit/<%= article.id %>">Edit</a>
    <form
      class="d-inline"
      action="/articles/<%= article.id%>?_method=DELETE"
      method="POST"
    >
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>
<% }) %> 

<%- include('./partials/footer'); %>
